<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_light"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/forgefitness_logo"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activate_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/app_text_primary"
            android:gravity="center"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activate_subtitle"
            android:textSize="16sp"
            android:textColor="@color/app_secondary"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/codeBoxesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/et_1"
                style="@style/CodeBoxStyle"
                android:nextFocusForward="@id/et_2" />

            <EditText
                android:id="@+id/et_2"
                style="@style/CodeBoxStyle"
                android:nextFocusForward="@id/et_3" />

            <EditText
                android:id="@+id/et_3"
                style="@style/CodeBoxStyle"
                android:nextFocusForward="@id/et_4" />

            <EditText
                android:id="@+id/et_4"
                style="@style/CodeBoxStyle"
                android:nextFocusForward="@id/et_5" />

            <EditText
                android:id="@+id/et_5"
                style="@style/CodeBoxStyle"
                android:nextFocusForward="@id/et_6" />

            <EditText
                android:id="@+id/et_6"
                style="@style/CodeBoxStyle" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_validate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/activate_button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/btn_primary_selector"
            android:stateListAnimator="@null"
            android:layout_marginTop="32dp"
            android:enabled="false" />

        <LinearLayout
            android:id="@+id/errorContainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_error"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/error_invalid_key"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/errorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_error"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activate_help"
        android:textColor="@color/app_secondary"
        android:textSize="16sp"
        android:paddingVertical="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>